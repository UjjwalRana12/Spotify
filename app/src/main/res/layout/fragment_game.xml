<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game"
    android:background="@color/white"
    android:id="@+id/Game">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/QuestiontextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/poppins"
            android:text="Remeber This Song ?"
            android:textColor="@color/black"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView14"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintStart_toStartOf="@+id/imageView14"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/illus_for_game"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.445"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/QuestiontextView" />

        <Button
            android:id="@+id/option1Button"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Desi Kalakar"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="@+id/imageView14"
            app:layout_constraintStart_toStartOf="@+id/imageView14"
            app:layout_constraintTop_toBottomOf="@+id/imageView14" />

        <Button
            android:id="@+id/option2Button"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="Rata Lambiyan"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/option1Button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/option1Button"
            app:layout_constraintTop_toBottomOf="@+id/option1Button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>