<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/SearchRecycler">


    <ImageView
        android:id="@+id/imageMV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/arjitsingh" />

    <TextView
        android:id="@+id/songNameTextView"
        android:layout_width="291dp"
        android:layout_height="29dp"
        android:layout_below="@+id/artistTextView"
        android:layout_alignStart="@+id/artistTextView"
        android:layout_alignEnd="@+id/artistTextView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:text="Name of songs"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/artistTextView"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/SongDuration"
        android:layout_toEndOf="@+id/imageMV"
        android:text="Artist"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/SongDuration"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"


        android:layout_marginTop="2dp"
        android:layout_marginEnd="7dp"
        android:gravity="center"
        android:text="00:00" />
</RelativeLayout>